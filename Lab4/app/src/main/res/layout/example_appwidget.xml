<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

	<ImageView
	    android:id="@+id/imageViewWidget"
	    android:layout_width="68dp"
	    android:layout_height="68dp"
	    android:src="@drawable/day_lg"
	    android:layout_margin="8dp"
	    />

	<TextView
	    android:id="@+id/textViewTemp"
	    android:layout_width="82dp"
	    android:layout_height="34dp"
	    android:layout_toRightOf="@id/imageViewWidget"
	    android:layout_alignParentTop="true"
	    android:textColor="#FFFFFF"
	    android:layout_marginTop="6dp"
        android:textSize="32sp"/>
	
	<TextView
	    android:id="@+id/textViewLocation"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_toRightOf="@id/imageViewWidget"
	    android:layout_below="@id/textViewTemp"
	    android:layout_alignParentBottom="true"
	    android:textColor="#FFFFFF"
	    android:layout_marginTop="2dp"
	    android:text="Kharkiv"/>

	<TextView
	    android:id="@+id/textViewHumidity"
	    android:layout_width="120dp"
	    android:layout_height="wrap_content"
	    android:layout_alignParentTop="true"
	    android:layout_alignParentRight="true"
	    android:textColor="#BBBBBB"
        android:gravity="left"/>

    <TextView
        android:id="@+id/textViewWind"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewHumidity"
        android:layout_alignParentRight="true"
        android:textColor="#BBBBBB"
        android:gravity="left"/>

    <TextView
        android:id="@+id/textViewPressure"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewWind"
        android:layout_alignParentRight="true"
        android:textColor="#BBBBBB"
        android:gravity="left"/>

</RelativeLayout>